{% if section.settings %}
    <div class="container text_on_the_banner_wrapper">
      <div class="row">
        <div class="col-lg-12">
            {% if section.settings.image != blank %}
                <img src="{{ section.settings.image | image_url }}">
            {% else %}
                <img src="https://developers.elementor.com/docs/assets/img/elementor-placeholder-image.png">
            {% endif %}
  
          <div class="content">
            <p class="title">{{ section.settings.title_id }}</p>
            <p class="text">{{ section.settings.text_id }}</p>
          </div>
        </div>
      </div>
    </div>
{% endif %}

    <style>
      .text_on_the_banner_wrapper {
        position: relative;
      }
  
      .text_on_the_banner_wrapper .content {
        position: absolute;
        left: 0;
        right: 0;
        bottom: 0;
        top: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
  
      .text_on_the_banner_wrapper img {
        width: 100%;
        height: 500px;
        object-fit: cover;
      }
  
      .text_on_the_banner_wrapper .content .title {
        font-size: 40px;
        line-height: 40px;
      }
  
      .text_on_the_banner_wrapper .content .text {
        font-size: 18px;
        line-height: 28px;
      }
    </style>

{% schema %}
  {
    "class": "section",
    "name": "Text on the banner",
    "presets": [
      {
        "name": "Text on the banner"
      }
    ],
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title_id",
        "label": "Title on banner",
        "default": "Title on banner"
      },
      {
        "type": "textarea",
        "id": "text_id",
        "label": "Text on banner",
        "default": "Text on banner"
      }
    ]
  }
{% endschema %}